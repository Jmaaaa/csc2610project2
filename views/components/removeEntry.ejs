<div class="container my-4">
    <form action="/remove" method="POST">
        <div class="form-group">
            <label>Parking Area Name</label>
            <input type="text" class="form-control" name="lot_type" required>
        </div >
        <div class="form-group">
            <label>Lot Name</label>
            <input type="text" class="form-control" name="lot_name" required>
        </div >
        <div class="form-group">
            <label>Lot Number</label>
            <input type="text" class="form-control" name="lot_num"required>
        </div >
        <div class="form-group">
            <label>Total Spaces</label>
            <input type="text" class="form-control" name="total_spaces" required>
        </div >
        
        <button type="submit" class="btn btn-primary mt-2">Remove</button>
    </form>
</div>